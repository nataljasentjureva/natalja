<% content_for :devise_form do %>

  <h2 class="heading text-4xl font-bold pt-4 mb-8">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="mb-6">
      <span class="text-gray-700">Who I am?</span>
      <div class="mt-2 grid grid-cols-2">
        <span class="inline-flex items-center col-span-1">
          <%= f.radio_button :role, "master", class: "form-radio" %>
          <%= f.label :role, "Nails master", class: "ml-2 mt-1" %>
        </span>
        <span class="inline-flex items-center col-span-1">
          <%= f.radio_button :role, "client", checked: true, class: "form-radio" %>
          <%= f.label :role, "Client", class: "ml-2 mt-1" %>
        </span>
      </div>
    </div>

    <div class="mb-6">
      <%= f.label :first_name, class:"label" %>
      <%= f.text_field :first_name, autofocus: true, class:"input" %>
    </div>

    <div class="mb-6">
      <%= f.label :last_name, class:"label" %>
      <%= f.text_field :last_name, class:"input" %>
    </div>

    <div class="mb-6">
      <%= f.label :phone, class:"label" %>
      <%= f.text_field :phone, class:"input" %>
    </div>

    <div class="mb-6">
      <%= f.label :email, class:"label" %>
      <%= f.email_field :email, autocomplete: "email", class:"input" %>
    </div>

    <div class="mb-6">
      <div class="flex">
        <%= f.label :password, class: "label" %>
        <% if @minimum_password_length %>
        <span class="text-xs pl-1 text-grey-dark"><em>(<%= @minimum_password_length %> characters minimum)</em></span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class:"label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="mb-6">
      <%= f.submit "Sign up", class: "btn btn-default" %>
    </div>

    <hr class="border mt-6" />

  <% end %>

  <%= render "devise/shared/links" %>

<% end %>

<%= render "devise/shared/form_wrap" %>
